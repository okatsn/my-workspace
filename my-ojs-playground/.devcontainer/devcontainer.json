{
    "name": "MyOJSPlayground",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    // the service in docker-compose.yml 
    "service": "devojs",
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/app", // KEYNOTE: make this consistent with that in docker-compose.yml. See okatsn/my-tex-life for where it is defined
    "customizations": {
        "vscode": {
            "settings": {
                "gitProjectManager.baseProjectsFolders": [
                    // KEYNOTE: it is allows GPM (felipecaputo.git-project-manager) to open repo in the "projects" in a new window
                    "~/app"
                ],
                // General settings
                "files.eol": "\n",
                "editor.formatOnSave": true,
                "dev.containers.cacheVolume": true
            }
        }
    }
    // "postCreateCommand": "",
}