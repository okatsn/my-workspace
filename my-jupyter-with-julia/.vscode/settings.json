{
    // Quarto
    // These settings are critical for quarto to work correctly with jupyter of my-workspace/my-jupyter-with-julia. Please refer to .devcontainer/devcontainer.json therein.
    "python.defaultInterpreterPath": "/opt/conda/bin/python", // this is for quarto to correctly work with VSCode. This path is obtained from `quarto check jupyter`.
    "quarto.usePipQuarto": false,
    "quarto.render.previewType": "external",
    // "ltex.dictionary": {
    //     "en-US": [
    //         ":~/workspace/ltex-dictionary/ltex.dictionary.en-US.txt",
    //     ],
    // },
    // "ltex.configurationTarget": {
    //     "dictionary": "workspaceExternalFile", // This setting allows Quick Fix (Ctrl+.) add words to "workspaceExternalFile"
    // },
    "cSpell.customDictionaries": {
        "project-words": {
            "name": "project-words",
            "path": "${workspaceRoot}/.vscode/ltex.dictionary.en-US.txt",
            "description": "Words used in this project; shared with LTeX.",
            "addWords": true
        },
        "custom": true, // Enable the `custom` dictionary
        "internal-terms": false // Disable the `internal-terms` dictionary
    }, // This prevents cSpell to highlight words already added to LTeX's dictionary.
    "ltex.additionalRules.motherTongue": "en-US",
}